---
import Section from "./Section.astro";
---

<Section title="Nutrition">
    <p>
        The table below shows nutritional values per serving without the
        additional fillings.
    </p>
    <table>
        <tr>
            <td>Calories</td>
            <td class="last">227kcal</td>
        </tr>
        <tr>
            <td>Carbs</td>
            <td class="last">0g</td>
        </tr>
        <tr>
            <td>Protein</td>
            <td class="last">20g</td>
        </tr>
        <tr>
            <td>Fat</td>
            <td class="last">22g</td>
        </tr>
    </table>
</Section>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
        text-align: left;
        font-family: "outfit";
        margin-block-end: 0.5rem;
    }
    tr {
        border-bottom: 1px solid var(--LightGrey);
    }
    p {
        font-family: 'outfit';
        font-size: 0.95rem;
    }
    .last {
        color: var(--Nutmeg);
        font-weight: 800;
    }
    td {
        padding: 0.6rem 0 0.6rem 1.3rem;
    }
    @media screen and (min-width: 1440px) {
        p {
            font-family: "outfit";
            font-size: 1rem;
        }
    }
</style>
