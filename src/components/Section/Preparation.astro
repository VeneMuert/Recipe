---
import Section from "./Section.astro";


---

<Section>
    <div>
        <h2>Preparation time</h2>
        <ul>
            <li><strong>Total:</strong><p> Approximately 10 minutes</p></li>
            <li><strong>Preparation:</strong><p> 5 minutes</p></li>
            <li><strong>Cooking:</strong><p> 5 minutes</p></li>
        </ul>
    </div>
</Section>
<style>
	div{
        padding: 1rem;        
        background: var(--RoseWhite);
        width: 90%;
        border-radius: 1.315rem;
        
    }
    li{
        font-size: 0.90rem;
        padding: 0.5rem;
        
    }
    h2{
        color:var(--DarkRaspberry);
        font-family:Outfit;
        font-size: 1.27rem;
        margin-block: 0.15rem;
        margin-inline-start: 0.4rem ;
    }
    ul{
        padding-inline-start: inherit;
        margin-block: 0rem;
    }
    

</style>
